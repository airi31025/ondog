<%= render 'user/sessions/header' %>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="text-dark bg-light p-4 mb-0">新規会員登録</h2>

      <div class="form-body p-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" ,class:"btn btn-info mb-3"%>
        </div>
      <% end %>

      <h5>登録済みの方</h5>
      <%= link_to "こちら",new_user_session_path,class:"btn btn-outline-info" %>
      <span>からログインしてください！</span>
      </div>
    </div>
  </div>
</div>

