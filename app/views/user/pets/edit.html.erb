<%= render 'user/sessions/header' %>
<h2>会員情報編集</h2>






<%= form_with model: @pet,url: user_pet_path(@pet.id),method: :patch do |f| %>

<h4>ペットの名前</h4>
<%= f.text_field :name %>

<h4>ペットの画像</h4>
<%= f.file_field :image, accept: "image/*"  %>

<%= f.fields_for :user do |u| %>

<h4>名前</h4>
<%= u.text_field :name %>

<h4>メールアドレス</h4>
<%= u.text_field :email %>



<% end %>


<%= f.submit '編集内容を保存' %>

<% end %>
