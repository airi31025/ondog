<%= render 'user/sessions/header' %>
<div class="container">
  <div class="row">
    <h2>マイページ</h2>
  </div>
  <div class="row">
    <div class="col-md-5">

      <table class="table">
        <tbody>
          <tr>
            <th><h4>名前</h4></th>
          </tr>
          <tr>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th><h4>メールアドレス</h4></th>
          </tr>
          <tr>
            <th><%= @user.email %></th>
          </tr>
        </tbody>
      </table>
    </div>


    <div class="col-md-5">
      <h4>ペットの名前</h4>
      <%= @pet.name %><br>
        <% if @pet.image.attached? %>
          <%= image_tag @pet.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集",edit_user_pet_path(@pet.id),class:"btn btn-outline-info"%>
  </div>
</div>
