<%= render 'user/sessions/header' %>
<div class="container">
  <div class="row">
    <h2>全問正解です！おめでとう！</h2>
  </div>
  <div class="row">
    <div class="col-md-5">
      <h4>ペットの名前</h4>
      <%= @pet.name %><br>
        <% if @pet.image.attached? %>
          <%= image_tag @pet.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
    </div>
    <div class="col-md-5">
      <h2>Lv.<%= @pet.level %></h2>
      <div class="progress">
        <div class="progress-bar progress-bar-striped bg-info" style="width:<%=((@pet.exp - @explevel[@pet.level])*100)  / (((@explevel[@pet.level+1]) - @explevel[@pet.level]))  %>% " role="progressbar" aria-valuenowaria-valuemin="0" aria-valuemax="100">
        <%= @pet.exp %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to "問題一覧に戻る",user_questions_path,class:"btn btn-info"%>
    <%= link_to "マイページ",user_pet_path(@pet.id),class:"btn btn-outline-info"%>
  </div>
</div>

