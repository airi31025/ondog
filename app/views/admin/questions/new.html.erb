<%= render 'admin/sessions/header' %>
<div class="container">
  <%= form_with model:@question, url: admin_questions_path, method: :post do |f| %>
  <div class="row">
    <h2>問題新規登録</h2>
  </div>
  <div class="row">
    <div class="col-md-5">
      <h4>題名</h4>
      <%= f.text_field :title %>
    </div>
  </div>
    <% @question.question_contents.each_with_index do |question, index| %>
  <div class="row">
    <div class="col-md-5">
      <h4>問題<%=index+1%></h4>
        <%= f.text_field :content, name: "question[content][#{index}]" %>
    </div>
    <div class="col-md-5">
      <h4>答え<%=index+1%></h4>
        <%= f.text_field :answer, name: "question[answer][#{index}]" %>
    </div>
  </div>
    <% end %>
    <%= f.submit'新規登録',class:"btn btn-outline-info" %>
  <% end %>
</div>
