<%= render 'admin/sessions/header' %>
<h2>問題新規登録</h2>
<%= form_with model:@question, url: admin_questions_path, method: :post do |f| %>
  <h4>題名</h4>
  <%= f.text_field :title %>

  <% @question.question_contents.each_with_index do |question, index| %>
    <h4>問題<%=index+1%></h4>
    <%= f.text_field :content, name: "question[content][#{index}]" %>

    <h4>答え<%=index+1%></h4>
    <%= f.text_field :answer, name: "question[answer][#{index}]" %>
  <% end %>

  <%= f.submit'新規登録' %>
<% end %>
